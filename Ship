public class Ship {

    private char Direction;
    private int Coord;
    private int shipSize;
    private int shipCode;
    private int(5) CARRIER; 
    private int(6) BATTLESHIP;
    private int(7) CRUISER;
    private int(8) SUBMARINE;
    private int(9) DESTROYER;

    public Ship(int shipSize, int shipCode){
        this.shipSize = shipSize;
        this.shipCode = shipCode;
        CARRIER == 5;
        BATTLESHIP == 6;
        CRUISER == 7;
        SUBMARINE == 8;
        DESTROYER == 9;
    }

    public void setShipSize(){

        if (shipCode == 5){
            shipSize = 5;
        }
        else if (shipCode == 6){
            shipSize = 4;
        }
        else if (shipCode == 7){
            shipSize = 3;
        }
        else if (shipCode == 8){
            shipSize = 3;
        }
        else if (shipCode == 9){
            shipSize = 2;
        }
    }

    public int getShipSize(int shipCode){
        return shipCode;
    }

    public boolean isShipDestroyed(){
        return true;
    }

}
